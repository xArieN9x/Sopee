<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet + Network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Accessibility priority -->
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <!-- Allow reading package info -->
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <!-- Usage stats -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <!-- Foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <!-- For overlay popups -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- Optional: log scan -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- ❌ TAK ADA BIND_VPN_SERVICE DISINI -->

    <!-- ################### PERMISSION BARU untuk CoreEngine ################### -->
    <!-- ➕ GPS Layer -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- ➕ System Layer: WakeLock -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- ➕ Network Layer: Potentially change settings -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- ####################################################################### -->

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.AppCompat.Light"
        android:usesCleartextTraffic="false"
        android:supportsRtl="true">

        <!-- Main UI -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ❌ SERVICE VPN LAMA DIBUANG -->
        <!-- <service android:name=".AppMonitorVPNService" ... /> -->

        <!-- ################### SERVICE TERAS BARU: CoreEngine ################### -->
        <!-- ➕ Gantikan VPN service dengan CoreEngine Service -->
        <service
            android:name=".AppCoreEngService"
            android:exported="false"
            android:foregroundServiceType="location|specialUse"> <!-- foregroundServiceType dikemaskini -->
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="network_conditioning" /> <!-- Nilai boleh diubah -->
        </service>
        <!-- ####################################################################### -->

        <!-- Accessibility automation -->
        <service
            android:name=".AccessibilityAutomationService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true"
            android:label="CBP Accessibility Engine">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- AnchorService (Keep Alive) -->
        <service
            android:name=".AnchorService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="keep_alive" />
        </service>

        <!-- Floating Widget Service -->
        <service
            android:name=".FloatingWidgetService"
            android:exported="false" />
    </application>
</manifest>
